<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/replay1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/replay"
        android:backgroundTint="#990000"
        android:layout_above="@id/playground"
        android:layout_margin="8dp"/>

    <ImageButton
        android:id="@+id/replay2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/replay"
        android:backgroundTint="#990000"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/playground"
        android:layout_margin="8dp"/>



    <LinearLayout
        android:id="@+id/bottomLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/myTurn1"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_fast_forward_24"
            android:scaleType="fitCenter"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are:    "
            android:textSize="35sp"
            android:textColor="#990000"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/xx"/>
        <ImageView
            android:id="@+id/myTurn2"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_fast_rewind_24"
            android:scaleType="fitCenter"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/aboveLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:rotation="180">

        <ImageView
            android:id="@+id/hisTurn1"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_fast_forward_24"
            android:scaleType="fitCenter"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are:    "
            android:textSize="35sp"
            android:textColor="#990000"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/oo"/>

        <ImageView
            android:id="@+id/hisTurn2"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_fast_rewind_24"
            android:scaleType="fitCenter"
            android:visibility="invisible"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/user_him"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/playground"
        android:layout_below="@id/aboveLine"
        android:layout_centerHorizontal="true"
        android:rotation="180"
        android:src="@mipmap/win"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/user_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/win"
        android:layout_below="@id/playground"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/bottomLine"
        android:layout_marginBottom="8dp"
        android:visibility="invisible"/>



